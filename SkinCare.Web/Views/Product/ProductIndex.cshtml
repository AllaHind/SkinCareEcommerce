@model IEnumerable<SkinCare.Web.Models.ProductDto>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="shop_section layout_padding">
    <div class="container">
        <div class="heading_container heading_center">
            <h2>
                 Products
            </h2>
        </div>
        <div class="col text-end pt-1">
            <a asp-action="ProductCreate" class="btn btn-outline-primary"> <i class="fas fa-plus">Create New Product</i></a>
        </div>
        <div class="row">
             @foreach (var item in Model){
            <div class="col-sm-6 col-md-4 col-lg-3">
                <div class="box">
                        <a asp-action="ProductDetail"  asp-route-productId="@item.ProductId">
                        <div class="img-box">
                                 <img src=@item.ImageURL alt="">
                        </div>
                        <div class="detail-box">
                            <h6>
                                    @item.ProductName
                            </h6>
                            <h6>
                                
                                <span>
                                    $@item.Price
                                </span>
                            </h6>
                        </div>
                        <div>
                                <a asp-action="ProductDelete" class="btn btn-danger" asp-route-productId="@item.ProductId">
                                    <i class="fas fa-trash"></i> 
                                </a>
                                <a asp-action="ProductEdit"class="btn btn-warning" asp-route-productId ="@item.ProductId">
                            <i class="fas fa-edit"></i>


                        </a>

                                                            <a asp-action="ProductDetail" class="btn btn-primary" asp-route-productId ="@item.ProductId">

                                    <i class="fas fa-info-circle"></i>

</a>
                        </div>
                    </a>
                </div>
            </div>
            }
            
        </div>
       
    </div>
</section>

<!-- end shop section -->

